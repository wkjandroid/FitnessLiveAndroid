<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/drawable_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--打开直接看到的页面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <!--设置标题栏-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorToolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/main_message_btn"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                >
            </ImageView>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBeginText"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBeginText"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/navigation_home_tablayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:tabIndicatorColor="@color/colorWhite"
            app:tabMode="fixed">

            <android.support.design.widget.TabItem
                android:id="@+id/main_page_tabitem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:icon="@drawable/main_page_selector"
                android:text="首页" />

            <android.support.design.widget.TabItem
                android:id="@+id/main_zhibo_video_tabitem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:icon="@drawable/ic_action_zhibo_video_btn"
                android:text="" />

            <android.support.design.widget.TabItem
                android:id="@+id/main_dynamic_tabitem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:icon="@drawable/main_owninfo_selector"
                android:text="动态" />
        </android.support.design.widget.TabLayout>
    </LinearLayout>
    <!--右滑看到的页面，设置头部和下部菜单-->
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/home_nav_view"
        app:headerLayout="@layout/nav_home_header"
        app:menu="@menu/nav_home_menu"
        >
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>